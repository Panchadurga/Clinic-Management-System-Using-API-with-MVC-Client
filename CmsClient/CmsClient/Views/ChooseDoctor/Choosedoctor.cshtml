@model CmsClient.Models.ChooseDoctors

<h4>ChooseDoctors</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Choosedoctor">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SelectSpeciality" class="control-label"></label>
                <select id="selspl" asp-for="SelectSpeciality" class="form-control">
                    <option>General</option>
                    <option>Internal Medicine</option>
                    <option>Pediatrics</option>
                    <option>Orthopedics</option>
                    <option>Ophthalmology</option>
                </select>
                <span asp-validation-for="SelectSpeciality" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input id="spl" type="submit" value="Choose Doctors" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
